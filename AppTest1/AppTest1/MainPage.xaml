<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTest1.MainPage">

    <StackLayout>
      

        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Emil's Coffee App!" HorizontalTextAlignment="Center" TextColor="DarkBlue" FontSize="36"/>
        </Frame>
        <Label  x:Name="LabelEllen" Text="Ellen's coffee card" FontSize="Title" Padding="30,10,30,10"/>
        <Button Text="Add cup" Clicked="ButtonAdd_Clicked" />
        <Button Text="Remove cup" Clicked="ButtonRemove_Clicked" />
        <Button Text="LoadFile" Clicked="ButtonLoad_Clicked" />

        <CollectionView>
            <CollectionView.ItemsLayout>
                <GridItemsLayout Span="2" Orientation="Vertical" />
            </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                        <DataTemplate>

                        </DataTemplate>
                 </CollectionView.ItemTemplate>
        </CollectionView>


</StackLayout>

</ContentPage>
